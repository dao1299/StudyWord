<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/containerFragmentListen"
    android:layout_height="match_parent">

    <TextView
        android:fontFamily="@font/font_van"
        android:id="@+id/txtTypeOfQuestionStudyListen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Listen and fill word"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/btnAudioQuestionStudyListen"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_shadow_button"
        android:elevation="8dp"
        android:src="@drawable/speak2"
        android:translationZ="5dp"
        app:layout_constraintEnd_toStartOf="@+id/btnAudioQuestionStudyListenSlow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTypeOfQuestionStudyListen"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/btnAudioQuestionStudyListenSlow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background_shadow_button"
        android:elevation="8dp"
        android:src="@drawable/turtle"
        android:translationZ="5dp"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAudioQuestionStudyListen"
        app:layout_constraintTop_toBottomOf="@id/txtTypeOfQuestionStudyListen" />


    <EditText
        android:id="@+id/edtAnswerQuestionStudyListen"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:letterSpacing="0.1"
        android:fontFamily="@font/font_van"
        android:background="@drawable/background_view"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAudioQuestionStudyListen" />


</androidx.constraintlayout.widget.ConstraintLayout>