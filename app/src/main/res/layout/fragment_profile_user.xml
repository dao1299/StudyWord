<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/edtNameSignup"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edtNameUserChangeProfile"
        android:layout_marginBottom="70dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgAvarChangeProfileUser"
            android:src="@drawable/support" />
    </androidx.cardview.widget.CardView>
    <EditText
        android:id="@+id/edtNameUserChangeProfile"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:fontFamily="@font/font_van"
        android:background="@drawable/edt_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edtPhoneNumberUserChangeProfile"
        android:paddingStart="10dp"
        android:paddingBottom="20dp"
        android:inputType="textEmailAddress"
        android:paddingTop="20dp"
        android:layout_margin="30dp"
        android:hint="Tên" />
    <EditText
        android:id="@+id/edtPhoneNumberUserChangeProfile"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/edt_login"
        android:fontFamily="@font/font_van"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="30dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:hint="Số điện thoại"
        android:inputType="phone"/>
    <EditText
        android:id="@+id/edtEmailUserChangeProfile"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/edt_login"
        android:paddingStart="10dp"
        android:fontFamily="@font/font_van"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"

        app:layout_constraintTop_toBottomOf="@id/edtPhoneNumberUserChangeProfile"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        />
    <Button
        android:id="@+id/btnChangeProfile"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/edtEmailUserChangeProfile"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/font_van"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Thay đổi thông tin"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>