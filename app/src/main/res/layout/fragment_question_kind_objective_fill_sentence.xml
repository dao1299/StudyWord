<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="105"
    android:layout_height="match_parent">
    <TextView
        android:fontFamily="@font/font_van"
        android:id="@+id/txtTypeOfQuestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_gravity="center"
        android:text="Choose the answer"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="35sp"
        android:textStyle="bold"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10.5"
        android:layout_weight="50"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
       android:background="@drawable/background_textview_question_kind_3"
        android:orientation="vertical"
        android:textSize="16sp">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <TextView
            android:fontFamily="@font/font_van"
            android:id="@+id/txtDefinitionQuestion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="4dp"
            android:justificationMode="inter_word"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="18sp"
            android:layout_weight="4.5"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <TextView
            android:fontFamily="@font/font_van"
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="4dp"
            android:justificationMode="inter_word"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="18sp"
            android:layout_weight="4.5"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="17"
        android:layout_weight="14">
        <TextView
            android:id="@+id/btnAnswer1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:fontFamily="@font/font_van"
            android:textColor="#000"
            android:background="@drawable/background_shadow_answer_fill_sentence"
            android:clickable="true"
            android:gravity="center"
            android:text="Submit"
            android:layout_weight="8"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/btnAnswer2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:fontFamily="@font/font_van"
            android:textColor="#000"
            android:background="@drawable/background_shadow_answer_fill_sentence"
            android:clickable="true"
            android:gravity="center"
            android:text="Submit"
            android:layout_weight="8"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="17"
        android:layout_weight="14">
        <TextView
            android:id="@+id/btnAnswer3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:textColor="#000"
           android:background="@drawable/background_shadow_answer_fill_sentence"
            android:clickable="true"
            android:fontFamily="@font/font_van"
            android:gravity="center"
            android:text="Submit"
            android:layout_weight="8"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/btnAnswer4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:fontFamily="@font/font_van"
            android:textColor="#000"
           android:background="@drawable/background_shadow_answer_fill_sentence"
            android:clickable="true"
            android:gravity="center"
            android:text="Submit"
            android:layout_weight="8"/>
    </LinearLayout>
</LinearLayout>