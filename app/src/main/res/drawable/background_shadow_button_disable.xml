<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <corners android:radius="20dp" />

            <padding
                android:bottom="8dp" />

            <solid android:color="#6E6D6D" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@android:color/darker_gray" />

            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>