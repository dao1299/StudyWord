<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <corners android:radius="20dp" />

            <padding
                android:top="2dp"
                android:left="3dp"
                android:right="3dp"
                android:bottom="4dp" />
            <solid android:color="#CCCBCB" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#fff" />

            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>